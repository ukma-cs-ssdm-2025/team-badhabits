{
  "name": "wellity-backend",
  "version": "1.0.0",
  "description": "Wellity Custom Backend - REST API for adaptive workouts, payments, and analytics",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "audit": "npm audit",
    "generate-openapi": "node scripts/generate-openapi.js",
    "docs:serve": "redoc-cli serve ../../docs/api/openapi-generated.yaml -p 8080",
    "docs:build": "redoc-cli bundle ../../docs/api/openapi-generated.yaml -o ../../docs/api/index.html"
  },
  "keywords": [
    "wellity",
    "fitness",
    "rest-api"
  ],
  "author": "Team BadHabits",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-validator": "^7.2.1",
    "js-yaml": "^4.1.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "redoc-cli": "^0.13.21",
    "@apidevtools/swagger-cli": "^4.0.4"
  }
}
